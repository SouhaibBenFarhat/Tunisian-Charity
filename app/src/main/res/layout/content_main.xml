<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EvenementDetailActivity"
    tools:showIn="@layout/activity_evenement_detail">

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recycler_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:clipToPadding="false"-->
    <!--android:scrollbars="vertical" />-->


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Let's Help"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"

                        />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                        android:id="@+id/progressOne"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        app:rcBackgroundColor="@color/white"
                        app:rcBackgroundPadding="0dp"
                        app:rcIconBackgroundColor="@color/white"
                        app:rcIconPadding="3dp"
                        app:rcIconSize="40dp"
                        app:rcIconSrc="@drawable/ic_restaurant_menu_black_24dp"
                        app:rcMax="150"
                        app:rcProgress="90"
                        app:rcProgressColor="@color/light_green"
                        app:rcRadius="5dp"

                        />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="25/100"
                                android:textColor="@color/black"
                                android:layout_marginLeft="15dp"
                                />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                            android:id="@+id/progressTwo"
                            android:layout_width="250dp"

                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            app:rcBackgroundColor="@color/white"
                            app:rcBackgroundPadding="0dp"
                            app:rcIconBackgroundColor="@color/white"
                            app:rcIconPadding="3dp"
                            app:rcIconSize="40dp"
                            app:rcIconSrc="@drawable/ic_restaurant_menu_black_24dp"
                            app:rcMax="150"
                            app:rcProgress="120"
                            app:rcProgressColor="@color/light_green"
                            app:rcRadius="5dp" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="25/100"
                                android:textColor="@color/black"
                                android:layout_marginLeft="15dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Description is one of four rhetorical modes along with exposition, argumentation, and narration. Each of the rhetorical modes is present in a variety of forms and"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dateDebut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="From: 25/1/2017"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        />


                    <TextView
                        android:id="@+id/tv_dateFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="To: 03/2/2017"
                        android:textColor="@color/black"
                        android:textSize="15sp"

                        android:textStyle="bold"


                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gouvernat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Ben Arouss"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"

                        />


                    <TextView
                        android:id="@+id/tv_adresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="citÃ© nozha"
                        android:textColor="@color/black"
                        android:textSize="15sp"

                        android:textStyle="bold"


                        />
                </LinearLayout>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_viewDonation"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:text="View Donations"
                    android:textAllCaps="false"
                    android:textColor="@color/base"


                    />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_addDonation"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:text="Donate"
                    android:textAllCaps="false"
                    android:textColor="@color/base"


                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_facebook_share"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/com_facebook_blue"
                    android:text="Share with facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/base"


                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_like"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Like"
                        android:textAllCaps="false"
                        android:textColor="@color/base"


                        />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_dislike"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:text="Dislike"
                        android:textAllCaps="false"
                        android:textColor="@color/base"


                        />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
