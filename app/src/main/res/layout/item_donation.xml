<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"


    >




    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardBackgroundColor="@color/base"

        android:layout_weight="1"
        android:layout_margin="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="5dp"
            android:id="@+id/picture"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardBackgroundColor="@color/base"
     android:layout_margin="5dp"

        android:layout_weight="0.4"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmed Chebbi"
                android:textColor="@color/black"
                android:id="@+id/tv_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_above="@+id/tv_quantity"
                android:layout_alignStart="@+id/tv_quantity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Unit"
                android:textColor="@color/black"
                android:id="@+id/tv_quantity"
                android:textSize="18sp"

                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_above="@+id/tv_type" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothes"
                android:textColor="@color/red"
                android:id="@+id/tv_type"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginBottom="14dp" />



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_yes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/base"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"


                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_no"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/base"
                android:layout_below="@+id/btn_yes"
                android:background="@color/light_green"
                android:layout_alignParentRight="true"


                />







        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>